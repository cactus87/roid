# Discord Bot Configuration
TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# Azure Speech SDK Configuration
SPEECH_KEY=your_azure_speech_api_key_here
SPEECH_REGION=your_azure_region_here

# Azure Language API (Optional - 언어 감지용, 현재 미사용)
LANGUAGE_KEY=your_azure_language_api_key_here
LANGUAGE_ENDPOINT=your_azure_language_endpoint_here

# Korean Discord List (Optional)
# Koreanbots 봇 토큰 (https://koreanbots.dev/bots/{봇ID}/stats 에서 확인)
KOREANBOTS_TOKEN=your_koreanbots_bot_token_here

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
